<% layout('./layouts/layouts') %>
<style>
    @media screen and (min-width: 900px){
        .container{
            width: 60%;
        }
    }
</style> 
    <div style="background-color: white;font-family:'Times New Roman', Times, serif">
    <div class="container" style="background-color: white;">
        <% for(let c of customer) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-6 col-lg-8">
                        <div class="card-body pb-1 pb-sm-0">
                            <h5 class="card-title" style="text-transform: capitalize;">
                                <b><%= c.username %></b>
                            </h5>
                            <a class="btn btn-info btn-sm" href="/customer/<%= c._id %>">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        </div>